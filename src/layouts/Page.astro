---
import Base from './Base.astro';

interface Props {
  frontmatter?: {
    title?: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
const title = frontmatter?.title ? `${frontmatter.title} | Neural Niki` : 'Neural Niki';
const description = frontmatter?.description || 'Business case studies, AI insights, and technology analysis.';
---

<Base title={title} description={description}>
  <div class="legal-page">
    <div class="container">
      <div class="prose">
        <slot />
      </div>
    </div>
  </div>
</Base>
