---
import Base from './Base.astro';
import TableOfContents from '../components/TableOfContents.astro';
import AdSlot from '../components/AdSlot.astro';
import SharePill from '../components/SharePill.astro';
import ReadingProgress from '../components/ReadingProgress.astro';

export interface Props {
  title: string;
  description: string;
  date?: Date;
  reading_time?: number;
  topic?: string;
  tags?: string[];
  image?: string;
  headings?: { depth: number; slug: string; text: string }[];
}

const {
  title,
  description,
  date,
  reading_time = 5,
  topic = 'Technology',
  tags = [],
  image,
  headings = []
} = Astro.props;

const slug = Astro.url.pathname.split('/posts/')[1]?.replace(/\/$/, '') || '';
const formattedDate = date?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Topic color mapping
const topicColors: Record<string, string> = {
  'Technology': 'text-blue-600 dark:text-blue-400',
  'Investing': 'text-green-600 dark:text-green-400',
  'AI': 'text-purple-600 dark:text-purple-400',
  'Product': 'text-amber-600 dark:text-amber-400',
  'Finance': 'text-cyan-600 dark:text-cyan-400',
};
---

<Base title={`${title} | Neural Niki`} description={description} image={image} article={true} publishedTime={date}>
  <ReadingProgress />
  
  <article class="relative" itemscope itemtype="https://schema.org/Article">
    <!-- Article Header -->
    <header class="container-blog py-12 md:py-16 lg:py-20">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Topic Badge -->
        {topic && (
          <div class="mb-6">
            <span class:list={[
              "inline-flex items-center px-4 py-1.5 rounded-full text-sm font-semibold",
              topicColors[topic] || 'text-gray-600'
            ]} style="background-color: var(--bg-tertiary);">
              {topic}
            </span>
          </div>
        )}
        
        <!-- Title -->
        <h1 
          class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-6 text-balance"
          style="color: var(--text-primary);"
          itemprop="headline"
        >
          {title}
        </h1>
        
        <!-- Description -->
        <p 
          class="text-lg md:text-xl mb-8 max-w-2xl mx-auto"
          style="color: var(--text-tertiary);"
          itemprop="description"
        >
          {description}
        </p>
        
        <!-- Meta Info -->
        <div class="flex flex-wrap items-center justify-center gap-4 text-sm" style="color: var(--text-muted);">
          {date && (
            <time datetime={date.toISOString()} itemprop="datePublished" class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              {formattedDate}
            </time>
          )}
          
          <span class="hidden sm:inline">â€¢</span>
          
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {reading_time} min read
          </span>
        </div>
        
        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap justify-center gap-2 mt-6">
            {tags.map((tag) => (
              <span 
                class="px-3 py-1 rounded-full text-xs font-medium"
                style="background-color: var(--bg-tertiary); color: var(--text-secondary);"
              >
                #{tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>
    
    <!-- Hero Image -->
    {image && (
      <div class="container-blog mb-12">
        <div class="max-w-4xl mx-auto">
          <figure class="relative rounded-2xl overflow-hidden shadow-xl">
            <img
              src={image}
              alt={title}
              class="w-full h-auto"
              loading="eager"
              itemprop="image"
            />
          </figure>
        </div>
      </div>
    )}
    
    <!-- Main Content Grid -->
    <div class="container-blog">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
        
        <!-- Left Sidebar - Share Actions (Desktop) -->
        <aside class="hidden lg:block lg:col-span-1">
          <div class="sticky top-24 flex flex-col items-center gap-4">
            <SharePill slug={slug} title={title} />
          </div>
        </aside>
        
        <!-- Main Article Content -->
        <div class="lg:col-span-8">
          <!-- First Ad Slot - After intro (optional) -->
          <!-- <AdSlot type="in-article" className="mb-8" /> -->
          
          <!-- Article Body -->
          <div 
            class="prose prose-lg prose-slate dark:prose-invert max-w-none prose-blog"
            itemprop="articleBody"
          >
            <slot />
          </div>
          
          <!-- End of Article Ad -->
          <AdSlot type="after-content" className="mt-12" />
          
          <!-- Article Footer -->
          <footer class="mt-12 pt-8 border-t" style="border-color: var(--border-primary);">
            <!-- Tags Repeat -->
            {tags.length > 0 && (
              <div class="mb-8">
                <h3 class="text-sm font-semibold uppercase tracking-wider mb-4" style="color: var(--text-primary);">
                  Topics
                </h3>
                <div class="flex flex-wrap gap-2">
                  {tags.map((tag) => (
                    <span 
                      class="px-4 py-2 rounded-lg text-sm font-medium transition-colors hover:bg-purple-50 dark:hover:bg-purple-900/30"
                      style="background-color: var(--bg-tertiary); color: var(--text-secondary);"
                    >
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            )}
            
            <!-- Share Section -->
            <div class="flex items-center justify-between">
              <p class="text-sm" style="color: var(--text-muted);">
                Thanks for reading! Share this article if you found it valuable.
              </p>
              <div class="lg:hidden">
                <SharePill slug={slug} title={title} />
              </div>
            </div>
          </footer>
        </div>
        
        <!-- Right Sidebar - TOC (Desktop) -->
        <aside class="hidden lg:block lg:col-span-3">
          <div class="sticky top-24 space-y-8">
            <TableOfContents headings={headings} />
            
            <!-- Sidebar Ad -->
            <AdSlot type="sidebar" />
          </div>
        </aside>
      </div>
    </div>
    
    <!-- Continue Reading Section -->
    <section class="container-blog py-16 md:py-24 mt-16 border-t" style="border-color: var(--border-primary);">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4" style="color: var(--text-primary);">
          Continue Reading
        </h2>
        <p class="mb-8" style="color: var(--text-tertiary);">
          Explore more articles on similar topics.
        </p>
        <a 
          href="/posts"
          class="btn-primary inline-flex items-center gap-2"
        >
          View All Articles
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </section>
  </article>
</Base>
