---
// ThemeToggle.astro - Theme switcher with proper dark mode support
---

<button
  id="themeToggle"
  type="button"
  class="theme-toggle relative w-10 h-10 rounded-lg flex items-center justify-center transition-all duration-300"
  aria-label="Toggle dark mode"
  title="Toggle dark mode"
>
  <!-- Sun icon (shown in dark mode - click to go light) -->
  <svg
    class="sun-icon w-5 h-5 absolute transition-all duration-300"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path
      fill-rule="evenodd"
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      clip-rule="evenodd"
    />
  </svg>
  
  <!-- Moon icon (shown in light mode - click to go dark) -->
  <svg
    class="moon-icon w-5 h-5 absolute transition-all duration-300"
    fill="currentColor"
    viewBox="0 0 20 20"
  >
    <path
      d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
    />
  </svg>
</button>

<style>
  .theme-toggle {
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
  }
  
  .theme-toggle:hover {
    background-color: var(--border-primary);
  }
  
  /* Light mode: show moon, hide sun */
  .sun-icon {
    opacity: 0;
    transform: rotate(-90deg) scale(0);
    color: #fbbf24;
  }
  
  .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
    color: #6366f1;
  }
  
  /* Dark mode: show sun, hide moon */
  :global(.dark) .sun-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }
  
  :global(.dark) .moon-icon {
    opacity: 0;
    transform: rotate(90deg) scale(0);
  }
</style>

<script>
  function setupThemeToggle() {
    const toggle = document.getElementById('themeToggle');
    if (!toggle) return;
    
    // Remove any existing listeners by cloning
    const newToggle = toggle.cloneNode(true);
    toggle.parentNode?.replaceChild(newToggle, toggle);
    
    newToggle.addEventListener('click', () => {
      const html = document.documentElement;
      const isDark = html.classList.contains('dark');
      
      if (isDark) {
        html.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        html.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
    });
  }
  
  // Setup on initial load
  setupThemeToggle();
  
  // Re-setup after Astro page transitions
  document.addEventListener('astro:after-swap', setupThemeToggle);
</script>
