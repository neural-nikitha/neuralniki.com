---
// Footer.astro - Premium editorial footer
const currentYear = new Date().getFullYear();

const navigationLinks = [
  { href: '/', label: 'Home' },
  { href: '/posts', label: 'Blog' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const legalLinks = [
  { href: '/privacy-policy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Service' },
  { href: '/disclaimer', label: 'Disclaimer' },
];

const socialLinks = [
  { 
    href: 'https://twitter.com/neuralniki', 
    label: 'Twitter',
    icon: `<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>`
  },
  { 
    href: 'https://github.com/neuralniki', 
    label: 'GitHub',
    icon: `<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>`
  },
  { 
    href: 'https://linkedin.com/in/neuralniki', 
    label: 'LinkedIn',
    icon: `<path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"/>`
  },
];
---

<footer class="mt-auto border-t" style="border-color: var(--border-primary); background-color: var(--bg-secondary);">
  <div class="container-blog py-16">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-4">
          <span class="text-xl font-bold">
            <span class="gradient-text">NEURAL</span> NIKI
          </span>
        </a>
        <p class="text-sm leading-relaxed mb-6" style="color: var(--text-tertiary);">
          Deep dives into AI, investing, software architecture, and digital culture. 
          Premium content for curious minds.
        </p>
        
        <!-- Social Links -->
        <div class="flex gap-4">
          {socialLinks.map(social => (
            <a 
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg flex items-center justify-center transition-all hover:scale-110"
              style="background-color: var(--bg-tertiary); color: var(--text-tertiary);"
              aria-label={social.label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>
      
      <!-- Navigation Column -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4" style="color: var(--text-primary);">
          Navigation
        </h4>
        <ul class="space-y-3">
          {navigationLinks.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-sm transition-colors hover:text-purple-600 dark:hover:text-purple-400"
                style="color: var(--text-tertiary);"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal Column -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4" style="color: var(--text-primary);">
          Legal
        </h4>
        <ul class="space-y-3">
          {legalLinks.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-sm transition-colors hover:text-purple-600 dark:hover:text-purple-400"
                style="color: var(--text-tertiary);"
              >
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a 
              href="/ads.txt"
              class="text-sm transition-colors hover:text-purple-600 dark:hover:text-purple-400"
              style="color: var(--text-tertiary);"
            >
              ads.txt
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Newsletter Column - HIDDEN for editorial calm (remove 'hide-subscription' class to restore) -->
      <div class="hide-subscription">
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4" style="color: var(--text-primary);">
          Stay Updated
        </h4>
        <p class="text-sm mb-4" style="color: var(--text-tertiary);">
          Get the latest articles delivered to your inbox. No spam, ever.
        </p>
        <form class="flex gap-2" onsubmit="return false;">
          <input 
            type="email" 
            placeholder="your@email.com"
            class="flex-1 px-4 py-2 rounded-lg text-sm border focus:outline-none focus:ring-2 focus:ring-purple-500"
            style="background-color: var(--bg-primary); border-color: var(--border-primary); color: var(--text-primary);"
          />
          <button 
            type="submit"
            class="btn-primary px-4 py-2 rounded-lg text-sm font-medium"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <!-- Divider -->
    <div class="border-t pt-8" style="border-color: var(--border-primary);">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sm" style="color: var(--text-muted);">
          Â© {currentYear} Neural Niki. All rights reserved.
        </p>
        <p class="text-sm" style="color: var(--text-muted);">
          Made with care for readers who think deeply.
        </p>
      </div>
    </div>
  </div>
</footer>
