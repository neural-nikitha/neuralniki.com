---
const currentYear = new Date().getFullYear();

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/posts', label: 'Articles' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const legalLinks = [
  { href: '/privacy-policy', label: 'Privacy' },
  { href: '/terms', label: 'Terms' },
  { href: '/disclaimer', label: 'Disclaimer' },
];
---

<footer class="mt-auto" style="background-color: var(--bg-secondary); border-top: 1px solid var(--border-color);">
  <div class="container py-12">
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-8">
      <!-- Brand -->
      <div>
        <a href="/" class="text-lg font-bold" style="color: var(--text-primary);">
          NEURAL NIKI
        </a>
        <p class="mt-2 text-sm max-w-xs" style="color: var(--text-tertiary);">
          Thoughtful perspectives on AI, technology, and the forces shaping our digital future.
        </p>
      </div>
      
      <!-- Navigation -->
      <nav class="flex flex-wrap gap-x-8 gap-y-2">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class="text-sm transition-colors"
            style="color: var(--text-tertiary);"
          >
            {link.label}
          </a>
        ))}
      </nav>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 flex flex-col md:flex-row items-center justify-between gap-4" style="border-top: 1px solid var(--border-color);">
      <p class="text-sm" style="color: var(--text-muted);">
        Â© {currentYear} Neural Niki. All rights reserved.
      </p>
      
      <nav class="flex flex-wrap gap-x-6 gap-y-2">
        {legalLinks.map(link => (
          <a 
            href={link.href}
            class="text-sm transition-colors"
            style="color: var(--text-muted);"
          >
            {link.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</footer>
