---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import ArticleCard from '../components/ArticleCard.astro';
import AdSlot from '../components/AdSlot.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

const featuredPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1, 7);

const title = 'Neural Niki â€” Deep Dives into Tech, AI & Investing';
const description = 'Premium long-form content on artificial intelligence, software architecture, investing, and digital culture. For curious minds who think deeply.';
---

<Base {title} {description}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden border-b" style="border-color: var(--border-primary);">
    <!-- Background with subtle gradient -->
    <div class="absolute inset-0" style="background: linear-gradient(180deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);"></div>
    
    <!-- Modern grid pattern overlay -->
    <div class="absolute inset-0 opacity-30">
      <svg class="w-full h-full" preserveAspectRatio="none">
        <defs>
          <pattern id="hero-grid" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.3" style="color: var(--accent-primary);"/>
          </pattern>
          <linearGradient id="grid-fade" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:var(--bg-primary);stop-opacity:0" />
            <stop offset="100%" style="stop-color:var(--bg-primary);stop-opacity:1" />
          </linearGradient>
        </defs>
        <rect width="100%" height="100%" fill="url(#hero-grid)" />
        <rect width="100%" height="100%" fill="url(#grid-fade)" />
      </svg>
    </div>
    
    <!-- Floating accent shapes -->
    <div class="absolute top-1/4 left-1/4 w-2 h-2 rounded-full animate-pulse" style="background: var(--accent-primary); opacity: 0.6;"></div>
    <div class="absolute top-1/3 right-1/3 w-3 h-3 rounded-full animate-pulse" style="background: var(--color-lavender-400); opacity: 0.4; animation-delay: 0.5s;"></div>
    <div class="absolute bottom-1/4 left-1/3 w-1.5 h-1.5 rounded-full animate-pulse" style="background: var(--accent-primary); opacity: 0.5; animation-delay: 1s;"></div>
    

    <div class="container-blog relative py-20 md:py-28 lg:py-36">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Status Badge -->
        <div 
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium mb-8"
          style="background-color: var(--accent-light); color: var(--accent-primary);"
        >
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full opacity-75" style="background-color: var(--color-success);"></span>
            <span class="relative inline-flex rounded-full h-2 w-2" style="background-color: var(--color-success);"></span>
          </span>
          New articles weekly
        </div>
        
        <!-- Main Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6 text-balance" style="color: var(--text-primary);">
          Deep dives into{' '}
          <span class="gradient-text">technology</span>
          {' '}and{' '}
          <span class="gradient-text">investing</span>
        </h1>
        
        <!-- Subheadline -->
        <p class="text-lg md:text-xl max-w-2xl mx-auto mb-10" style="color: var(--text-tertiary);">
          Premium long-form content for curious minds. AI, software architecture, financial literacy, and the intersection of technology with money.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="/posts" class="btn-primary px-8 py-3.5 text-base rounded-xl">
            Browse Articles
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href="/about" class="btn-ghost px-8 py-3.5 text-base rounded-xl border" style="border-color: var(--border-primary);">
            About the Author
          </a>
        </div>
        
        <!-- Stats -->
        <div class="flex items-center justify-center gap-8 md:gap-12 mt-14 pt-8 border-t" style="border-color: var(--border-secondary);">
          <div class="text-center">
            <div class="text-3xl font-bold mb-1" style="color: var(--text-primary);">{allPosts.length}</div>
            <div class="text-sm font-medium" style="color: var(--text-muted);">Articles</div>
          </div>
          <div class="w-px h-10" style="background-color: var(--border-primary);"></div>
          <div class="text-center">
            <div class="text-3xl font-bold mb-1" style="color: var(--text-primary);">5</div>
            <div class="text-sm font-medium" style="color: var(--text-muted);">Topics</div>
          </div>
          <div class="w-px h-10" style="background-color: var(--border-primary);"></div>
          <div class="text-center">
            <div class="text-3xl font-bold mb-1" style="color: var(--text-primary);">Free</div>
            <div class="text-sm font-medium" style="color: var(--text-muted);">Forever</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Article -->
  {featuredPost && (
    <section class="container-blog py-16 md:py-20">
      <div class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-3">
          <div class="w-1 h-8 rounded-full" style="background: linear-gradient(180deg, var(--color-primary-500), var(--color-lavender-500));"></div>
          <h2 class="text-2xl md:text-3xl font-bold" style="color: var(--text-primary);">
            Featured Article
          </h2>
        </div>
        <span 
          class="px-3 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wide"
          style="background-color: var(--accent-light); color: var(--accent-primary);"
        >
          Latest
        </span>
      </div>
      
      <ArticleCard
        title={featuredPost.data.title}
        description={featuredPost.data.description}
        date={featuredPost.data.pubDate}
        reading_time={featuredPost.data.reading_time}
        topic={featuredPost.data.topic}
        image={featuredPost.data.heroImage}
        slug={featuredPost.slug}
        featured={true}
      />
    </section>
  )}

  <!-- Ad Slot -->
  <div class="container-blog pb-8">
    <AdSlot type="in-article" />
  </div>

  <!-- Recent Articles Grid -->
  {recentPosts.length > 0 && (
    <section class="container-blog py-12 md:py-16">
      <div class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-3">
          <div class="w-1 h-8 rounded-full" style="background: linear-gradient(180deg, var(--color-primary-500), var(--color-lavender-500));"></div>
          <h2 class="text-2xl md:text-3xl font-bold" style="color: var(--text-primary);">
            Recent Articles
          </h2>
        </div>
        <a 
          href="/posts"
          class="text-sm font-semibold transition-all hover:gap-3 flex items-center gap-2"
          style="color: var(--accent-primary);"
        >
          View all
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {recentPosts.map(post => (
          <ArticleCard
            title={post.data.title}
            description={post.data.description}
            date={post.data.pubDate}
            reading_time={post.data.reading_time}
            topic={post.data.topic}
            image={post.data.heroImage}
            slug={post.slug}
          />
        ))}
      </div>
    </section>
  )}

  <!-- Topics Section -->
  <section class="container-blog py-16 md:py-20 border-t border-b" style="border-color: var(--border-primary);">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-4" style="color: var(--text-primary);">
        Explore Topics
      </h2>
      <p class="max-w-xl mx-auto" style="color: var(--text-tertiary);">
        Discover content across technology, AI, investing, and more.
      </p>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
      {[
        { name: 'Technology', icon: 'ðŸ’»', description: 'Software & systems', color: '#3b82f6' },
        { name: 'AI', icon: 'ðŸ¤–', description: 'Machine learning', color: '#8b5cf6' },
        { name: 'Investing', icon: 'ðŸ“ˆ', description: 'Markets & strategy', color: '#22c55e' },
        { name: 'Finance', icon: 'ðŸ’°', description: 'Financial literacy', color: '#06b6d4' },
      ].map(topic => (
        <a 
          href={`/posts?topic=${topic.name.toLowerCase()}`}
          class="group p-6 rounded-2xl border transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
          style={`background-color: var(--bg-elevated); border-color: var(--border-primary);`}
        >
          <div 
            class="w-12 h-12 rounded-xl flex items-center justify-center text-2xl mb-4 transition-transform group-hover:scale-110"
            style={`background-color: ${topic.color}15;`}
          >
            {topic.icon}
          </div>
          <h3 class="font-bold mb-1 transition-colors group-hover:text-purple-600" style="color: var(--text-primary);">
            {topic.name}
          </h3>
          <p class="text-sm" style="color: var(--text-muted);">
            {topic.description}
          </p>
        </a>
      ))}
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="container-blog py-20 md:py-28">
    <div 
      class="max-w-3xl mx-auto text-center p-10 md:p-14 rounded-3xl relative overflow-hidden"
      style="background: linear-gradient(135deg, #7c3aed, #8b5cf6);"
    >
      <!-- Decorative elements -->
      <div class="absolute top-0 right-0 w-40 h-40 rounded-full opacity-30 blur-2xl" style="background: #c4b5fd;"></div>
      <div class="absolute bottom-0 left-0 w-32 h-32 rounded-full opacity-30 blur-2xl" style="background: #a78bfa;"></div>
      
      <div class="relative z-10">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: #ffffff;">
          Stay Curious
        </h2>
        <p class="text-lg mb-8 max-w-lg mx-auto" style="color: rgba(255, 255, 255, 0.9);">
          Get thoughtful articles on tech and investing delivered to your inbox. No spam, unsubscribe anytime.
        </p>
        
        <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto" onsubmit="return false;">
          <input 
            type="email" 
            placeholder="your@email.com"
            class="flex-1 px-5 py-3.5 rounded-xl text-base border-2 focus:outline-none transition-colors placeholder-white/60"
            style="background-color: rgba(255, 255, 255, 0.2); color: #ffffff; border-color: rgba(255, 255, 255, 0.3);"
          />
          <button 
            type="submit"
            class="px-8 py-3.5 rounded-xl text-base font-semibold transition-all hover:shadow-lg hover:-translate-y-0.5"
            style="background-color: #ffffff; color: #7c3aed;"
          >
            Subscribe
          </button>
        </form>
        
        <p class="text-sm mt-4" style="color: rgba(255, 255, 255, 0.7);">
          Join 1,000+ readers. Published every week.
        </p>
      </div>
    </div>
  </section>
</Base>
